{
    "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "isolatedModules": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "noLib": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "suppressImplicitAnyIndexErrors": true,
      "strictNullChecks": true,
      "outDir": "dist",
      "jsx": "react",
      "lib": [
        "es2017.object",
        "es2015",
        "dom"
      ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
      "node_modules"
    ]
  }