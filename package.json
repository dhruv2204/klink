{
  "name": "klink",
  "version": "1.0.0",
  "lint-staged": {
    "{ui,server}/**/{*.ts,*.tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "scripts": {
    "clean": "rm -r dist/*.js || true",
    "prestart": "yarn run clean",
    "dev": "webpack-dev-server --open --config webpack.config.js --env.dev --hot --inline --http --host 0.0.0.0",
    "build": "webpack --config webpack.config.js --env.dev --mode development",
    "build:prod": "npm run clean && webpack --config webpack.config.js --env.prod --mode production",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "emotion": "^10.0.9",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^5.0.3",
    "html-webpack-plugin": "^3.2.0",
    "ts-loader": "^6.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  }
}
